<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<pretty-config xmlns="http://ocpsoft.com/prettyfaces/3.3.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://ocpsoft.com/prettyfaces/3.3.0 http://ocpsoft.com/xml/ns/prettyfaces/ocpsoft-pretty-faces-3.3.0.xsd">

    <!-- ================= -->
	<!--   DEFAULT PAGES   --> 
	<!-- ================= -->
	
	<url-mapping id="home">
		<pattern value="/home" />
		<view-id>/index.jsf</view-id>
	</url-mapping>

	<!-- ================ -->
	<!--   PRODUTO CRUD   --> 
	<!-- ================ -->
	
	<url-mapping id="produto-search">
		<pattern value="/visualizar/produtos" />
		<view-id>/produto/search.jsf</view-id>
	</url-mapping>

	<url-mapping id="produto-view">
		<pattern value="/visualizar/produto/#{id}" />
		<view-id>/produto/view.jsf</view-id>
	</url-mapping>
	
	<url-mapping id="produto-edit">
		<pattern value="/alterar/produto/#{id}" />
		<view-id>/produto/create.jsf</view-id>
	</url-mapping>
	
	<url-mapping id="produto-create">
		<pattern value="/novo/produto" />
		<view-id>/produto/create.jsf?faces-redirect=true</view-id>
	</url-mapping>
	
	<!-- ============== -->
	<!--   LISTA CRUD   --> 
	<!-- ============== -->
	
	<url-mapping id="lista-search">
		<pattern value="/visualizar/listas" />
		<view-id>/lista/search.jsf</view-id>
	</url-mapping>

	<url-mapping id="lista-view">
		<pattern value="/visualizar/lista/#{id}" />
		<view-id>/lista/view.jsf</view-id>
	</url-mapping>
	
	<url-mapping id="lista-edit">
		<pattern value="/alterar/lista/#{id}" />
		<view-id>/lista/create.jsf</view-id>
	</url-mapping>
	
	<url-mapping id="lista-create">
		<pattern value="/novo/lista" />
		<view-id>/lista/create.jsf?faces-redirect=true</view-id>
	</url-mapping>
	
</pretty-config>