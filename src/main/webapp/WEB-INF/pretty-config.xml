<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<pretty-config xmlns="http://ocpsoft.com/prettyfaces/3.3.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://ocpsoft.com/prettyfaces/3.3.0 http://ocpsoft.com/xml/ns/prettyfaces/ocpsoft-pretty-faces-3.3.0.xsd">

    <!-- ================= -->
	<!--   DEFAULT PAGES   --> 
	<!-- ================= -->
	
	<url-mapping id="inicial">
		<pattern value="/inicial" />
		<view-id>/index.jsf</view-id>
	</url-mapping>

	<!-- ================ -->
	<!--   PRODUTO CRUD   --> 
	<!-- ================ -->
	
	<url-mapping id="visualizar-produtos">
		<pattern value="/visualizar/produtos" />
		<view-id>/produto/consultarProduto.jsf</view-id>
	</url-mapping>

	<url-mapping id="visualizar-produto">
		<pattern value="/visualizar/produto/#{id}" />
		<view-id>/produto/visualizarProduto.jsf</view-id>
	</url-mapping>
	
	<url-mapping id="alterar-produto">
		<pattern value="/alterar/produto/#{id}" />
		<view-id>/produto/cadastrarProduto.jsf</view-id>
	</url-mapping>
	
	<url-mapping id="novo-produto">
		<pattern value="/novo/produto" />
		<view-id>/produto/cadastrarProduto.jsf?faces-redirect=true</view-id>
	</url-mapping>
	
	<!-- ============== -->
	<!--   LISTA CRUD   --> 
	<!-- ============== -->
	
	<url-mapping id="visualizar-listas">
		<pattern value="/visualizar/listas" />
		<view-id>/lista/consultarLista.jsf</view-id>
	</url-mapping>

	<url-mapping id="visualizar-lista">
		<pattern value="/visualizar/lista/#{id}" />
		<view-id>/lista/visualizarLista.jsf</view-id>
	</url-mapping>
	
	<url-mapping id="alterar-lista">
		<pattern value="/alterar/lista/#{id}" />
		<view-id>/lista/cadastrarLista.jsf</view-id>
	</url-mapping>
	
	<url-mapping id="nova-lista">
		<pattern value="/nova/lista" />
		<view-id>/lista/cadastrarLista.jsf?faces-redirect=true</view-id>
	</url-mapping>
		
</pretty-config>